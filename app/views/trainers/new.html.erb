<h2>Sign up</h2>

<%= form_for @trainer do |f| %>
  <div class="field">
    <%= f.label :login %><br />
    <%= f.text_field :login, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :senha %><br>
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :nome %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :idade %><br />
    <%= f.text_field :age %>
  </div>

  <div class="field">
    <%= f.label :genero %><br />
    <%= f.select :gender, ['Masculino', 'Feminino'] %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
