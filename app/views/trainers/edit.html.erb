<div class="container">
  <div class="row col-lg-12 col-md-12">
    <div class="col-lg-8 col-md-8 trainer-profile">
      <h3><%= @trainer.login %></h3>
      <%= form_for @trainer do |f| %>
        <div class="form-group">
          <% if @trainer.profile_image.attached? %>
            <%= image_tag @trainer.profile_image, width: '30px' %>
          <% end %>
          <%= f.label :Imagem%> <br>
          <%= f.file_field :profile_image %>
        </div>
        <div class="form-group">
          <%= f.label :Nome %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :Idade %>
          <%= f.number_field :age, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :Genero %> <br>
          <%= f.select :gender, ['', 'Masculino', 'Feminino'], class: 'form-control' %>
        </div>
        <div>
          <p align="center"><%= f.submit :Salvar, class: 'btn btn-success' %></p>
        </div>
      <% end %>
    </div>    
  </div>
</div>