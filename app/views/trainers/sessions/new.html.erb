<div class="container">
  <div class="row col-lg-12 col-md-12">
    <div class="col-lg-5 col-md-10 box-login">
      <%= image_tag 'logo.png' %>

      <h3 align="center">ENTRAR</h3>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.text_field :login, autofocus: true, placeholder: 'Login' %>
        </div>

        <div class="field">
          <br />
          <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Senha' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :lembre_me %>
          </div>
        <% end %>

        <div>
          <%= f.submit "Entrar", class: 'btn btn-success' %>
        </div>
      <% end %>
      
      <a href="/trainers/sign_up">NÃ£o tenho conta</a>
    </div> 
  </div>
</div>
